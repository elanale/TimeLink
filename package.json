{
  "name": "timelink",
  "version": "1.0.15",
  "description": "TimeLink - Electron Time Management App",
  "main": "main.js",
  "homepage": "https://github.com/elanale/TimeLink",
  "repository": {
    "type": "git",
    "url": "https://github.com/elanale/TimeLink.git"
  },
  "author": "elanale",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-publish": "electron-builder --publish=always",
    "build-draft": "electron-builder --publish=never",
    "release": "electron-builder --publish=always",
    "dist": "electron-builder --publish=never"
  },
  "build": {
    "appId": "com.elanale.timelink",
    "productName": "TimeLink",
    "directories": {
      "output": "dist",
      "buildResources": "resources"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "zip",
          "arch": ["arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64"]
        },
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        }
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "category": "Office",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "elanale",
      "repo": "TimeLink",
      "private": false,
      "releaseType": "release"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.13.3"
  }
}