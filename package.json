{
  "name": "timelink",
  "version": "1.0.0",
  "description": "TimeLink â€“ Electron App with auto-update",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.elanale.timelink",
    "productName": "TimeLink",
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "arch": [
        "arm64",
        "x64"
      ]
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "elanale",
        "repo": "TimeLink"
      }
    ]
  },
  "dependencies": {
    "electron": "^<latest-version>",
    "electron-updater": "^<latest-version>"
  },
  "devDependencies": {
    "electron-builder": "^<latest-version>"
  }
}
